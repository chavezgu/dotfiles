set mapleader=","

" use the listed characters to enumerate quickhint elements
set hintkeys=asdfjkl

" toggle menu toolbar
nmap <C-F1> :set guioptions!=m<CR>

" set duckduckgo as the main search engine. 
set defsearch=duckduckgo

"Ignore google sites
:autocmd LocationChange ^https?://(reader|mail)\.google\.com/ :normal! <C-z>
